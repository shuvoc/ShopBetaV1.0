<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#faffffff">

    <TextView
        android:id="@+id/l_call_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Type"
        android:paddingRight="10dp"
        android:textColor="#807777"
        android:layout_alignParentRight="true">
    </TextView>






    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/iv_contact"
        android:src="@drawable/header_logo"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/l_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Name"
        android:paddingLeft="10dp"
        android:textColor="#807777"
        android:layout_toRightOf="@id/iv_contact">
    </TextView>
    <TextView
        android:id="@+id/l_contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:textColor="#939187"
        android:layout_toRightOf="@id/iv_contact"
        android:layout_below="@id/l_contact_name">
    </TextView>



    <TextView
        android:id="@+id/l_call_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="14sp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textColor="#9c9994"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
    </TextView>
    <TextView
        android:id="@+id/l_call_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textColor="#fff"
        android:background="#b7bdc2"
        android:layout_below="@id/l_contact_number"
        android:layout_toRightOf="@id/iv_contact">
    </TextView>





</RelativeLayout>



