<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_widget"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dip"
    android:focusable="false"
    android:clickable="false">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginTop="8dp"
        android:background="@drawable/corner_round_button"
        android:src="@drawable/call_list"
        android:contentDescription="image"
        android:scaleType="centerCrop"
        android:padding="8dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_icon"
        android:paddingLeft="0dp"
        android:paddingTop="2dp"

        android:text="@string/app_name"
        android:textColor="#c2000000"
        android:layout_centerHorizontal="true" />
        <!--android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"-->

    <TextView
        android:id="@+id/txt_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dip"
        android:layout_toRightOf="@+id/img_icon"
        android:background="@drawable/gv_notification_back"
        android:contentDescription="badge"
        android:gravity="center"
        android:text="5"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"/>

</RelativeLayout>